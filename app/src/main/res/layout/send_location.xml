<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report an accident or traffic jam"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/accidents_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_below="@+id/title">

    </Spinner>

    <ImageButton
        android:id="@+id/imgBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/accidents_list"
        android:tooltipText="Take Photo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo of the accident to increase your report authenticity"
        android:layout_below="@+id/accidents_list"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgReview"
        android:layout_below="@+id/imgBtn"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:layout_below="@+id/imgReview"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/editText_description"
        android:layout_below="@+id/description_title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:layout_below="@+id/editText_description"
        android:text="Submit"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>